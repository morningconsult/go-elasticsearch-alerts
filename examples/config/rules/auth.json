{
  "name": "User logins",
  "index": "auditbeat-*",
  "schedule": "@every 1m",
  "body": {
    "query": {
      "bool": {
        "must": [],
        "filter": [
          {
            "match_all": {}
          },
          {
            "match_phrase": {
              "event.dataset": {
                "query": "login"
              }
            }
          },
          {
            "match_phrase": {
              "event.action": {
                "query": "user_login"
              }
            }
          },
          {
            "range": {
              "@timestamp": {
                "gte": "now-10m"
              }
            }
          }
        ],
        "should": [],
        "must_not": []
      }
    },
    "size": 100
  },
  "outputs": [
    {
      "type": "cli",
      "config": {
        "comand": "/usr/lib/zabbix/alertscripts/zbxtg.py",
        "args": "MONITORING_PARMA|‚ùóUser %user.name% logged in, host %host.name%, %source.domain%|--group"
      }
    }
  ]
}
