{
  "name": "Errors in DBs",
  "index": "techlog-minimal-*",
  "schedule": "@every 1h",
  "body": {
    "query": {
      "bool": {
        "must": [
          {
            "query_string": {
              "query": "!*Прайд_ДополнитьФормуДоговора* and !*Сеанс работы завершен администратором* and !*Форма недоступна для использования* and !*Неправильное имя пользователя или пароль* and !*Параметр сеанса отсутствует или удален* and  !*Connection reinstall is required* and !*Требуется переустановка соединения*",
              "analyze_wildcard": true,
              "time_zone": "Europe/Moscow"
            }
          }
        ],
        "filter": [
          {
            "exists": {
              "field": "Context"
            }
          },
          {
            "exists": {
              "field": "processName"
            }
          },
		   {
          "match_phrase": {
            "event": {
              "query": "EXCP"
            }
          }
        },
		 {
          "match_phrase": {
            "process": {
              "query": "rphost"
            }
          }
        },
          {
            "range": {
              "@timestamp": {
                "gte": "now-1h"
              }
            }
          }
        ],

        "must_not": [
          {
            "match_phrase": {
              "Context": {
                "query": "Система.ПолучитьФорму : Обработка.КаталогРасширений.Форма.ФормаУстановленныеРасширения"
              }
            }
			},
			{
			  "match_phrase": {
				"processName": {
				  "query": "##AdminProcess##"
				}
			  }
			},
			{
			  "match_phrase": {
				"applicationName": {
				  "query": "RAS"
				}
			  }
			},
			 {
			  "match_phrase": {
				"Context": {
				  "query": ""
				}
			  }
			}
        ]
      }
    },
    "aggs": {
      "dbname": {
        "terms": {
            "script":  "return doc['event'] + \"_\" +  doc['processName']", 
			"min_doc_count": 70,
          "size": 10
        }
      }
    },
    "size": 20,
    "_source": "hits.hits._index"
  },
  "body_field": "hits.hits._index",
  "filters": [
    "aggregations.dbname.buckets"
  ],
  "Conditions": [
    {
      "comonfield": "aggregations.dbname.buckets",
	  "filtersfield": "",
      "type": "spike",
	  "ge": 3,
      "quantifier": "any"
    }
  ],
  "outputs": [
    {
      "type": "cli",
      "config": {
        "comand": "/usr/lib/zabbix/alertscripts/zbxtg.py",
        "args": "-599333313|❗Errors in DBs|Проблема с базой %key%, резкий всплеск ошибок %doc_count%|--channel"
      }
    }
  ]
}
