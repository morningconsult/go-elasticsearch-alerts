{
  "name": "Example Error",
  "index": "test-index",
  "schedule": "@every 1m",
  "body": {
    "query": {
      "bool": {
        "must": [
          { "term" : { "source" : { "value" : "/var/log/system.log" } } }
        ],
        "filter": [
          { "range" : { "@timestamp" : { "gte" : "now-1m/m" } } }
        ]
      }
    },
    "aggregations": {
      "hostname": {
        "terms": {
          "field": "system.syslog.hostname",
          "min_doc_count": 1
        }
      }
    },
    "size": 20,
    "sort": [
      { "@timestamp": "desc" }
    ]
  },
  "filters": [
    "aggregations.hostname.buckets"
  ],
  "outputs": [
    {
      "type": "file",
      "config": {
        "file": "/dev/stdout"
      }
    }
  ]
}